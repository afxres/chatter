<Application x:Class="Chatter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             StartupUri="Cover.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <sys:Double x:Key="WindowCaptionHeight">32</sys:Double>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/FlattenScrollViewerStyle.xaml" />
                <ResourceDictionary Source="Resources/FlattenStyle.xaml" />
                <ResourceDictionary Source="Resources/GeometryDictionary.xaml" />
                <ResourceDictionary Source="Resources/ImageDictionary.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
