<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Chatter.Viewer.App">
    <Application.Styles>
        <StyleInclude Source="avares://Avalonia.Themes.Default/DefaultTheme.xaml" />
        <StyleInclude Source="avares://Avalonia.Themes.Default/Accents/BaseLight.xaml" />
        <StyleInclude Source="avares://Chatter.Viewer/Styles/ListBox.xaml" />
        <StyleInclude Source="avares://Chatter.Viewer/Styles/ListBoxItem.xaml" />

        <Style Selector="TextBlock">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#FF2C2C2C" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
        <Style Selector="TextBox">
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Foreground" Value="#FF2C2C2C" />
            <Setter Property="FontFamily" Value="Consolas" />
        </Style>
        <Style Selector="TextBlock.Small">
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style Selector="TextBlock.Content">
            <Setter Property="FontSize" Value="13" />
        </Style>
        <Style Selector="TextBlock.Large">
            <Setter Property="FontSize" Value="36" />
        </Style>
        <Style Selector="TextBlock.Light">
            <Setter Property="Foreground" Value="#FF6A6A6A" />
        </Style>
    </Application.Styles>
</Application>
